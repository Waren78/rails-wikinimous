<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <h3>Edit article</h3>
      <%= form_with model: @article do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title %>
        <%= f.label :content %>
        <%= f.text_field :content %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
