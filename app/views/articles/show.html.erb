<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <article>
        <h1>
          <%= @article.title %>
          <small>
            <%= link_to "edit", edit_article_path(@article)%>
            <%= link_to "delete",
                article_path(@article),
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
            %>
          </small>
        </h1>
        <p><%= @article.content %></p>
      </article>
    </div>
  </div>
</div>
